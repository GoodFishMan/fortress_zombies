"UnlitGeneric"
{
	"$translucent" 1
	"$baseTexture" "hud\gradient_red"
	"$detail" "hud\weapon_bg_mask"
	$detailscale 1
	$detailblendmode 8
	$distancealphafromdetail 1

	// give it a slight outer soft edge
	$softedges 1
	$edgesoftnessstart 0.5
    $edgesoftnessend 0.4
	$scaleedgesoftnessbasedonscreenres 1

	// give it a white outline
	$outline 1
	$outlinecolor "[0.7 0.7 0.5]"
	$outlinestart0 0.3
	$outlinestart1 0.49
	$outlineend0 0.57
	$outlineend1 0.73
	$scaleoutlinesoftnessbasedonscreenres 1

	$distancealpha 1
	"$no_fullbright" 1
	"$ignorez" 1
	"%keywords" "tf"
}

